{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run rp2040_plant_automation",
            "type": "shell",
            "command": "cargo embed --release --package rp2040_plant_automation --bin rp2040_plant_automation --target thumbv6m-none-eabi",
            "options": {
                "env": {
                    "DEFMT_LOG": "info"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
